<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name4"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:text="Координаты"
        android:textAlignment="center"
        android:textColor="@color/bright_pink"
        android:textSize="30sp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="50sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="50sp"
        android:hint="latitude"
        android:textColor="@color/bright_pink"
        android:textSize="27sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="50sp"
        android:hint="longitude"
        android:textColor="@color/bright_pink"
        android:textSize="27sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="50sp"
        android:hint="time"
        android:textColor="@color/bright_pink"
        android:textSize="27sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/accuracy"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="50sp"
        android:hint="accuracy"
        android:textColor="@color/bright_pink"
        android:textSize="27sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="246dp" />

    <Button
        android:id="@+id/get_coordinats"
        android:layout_width="349dp"
        android:layout_height="54dp"
        android:text="Получить координаты"
        android:layout_marginStart="30sp"
        android:layout_marginTop="40sp"
        tools:layout_editor_absoluteX="27dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteY="411dp" />

    <Button
        android:id="@+id/button_back2"
        android:layout_width="358dp"
        android:layout_height="62dp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30sp"
        android:background="@color/light_pink"
        android:text="@string/back"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="613dp" />
</LinearLayout>